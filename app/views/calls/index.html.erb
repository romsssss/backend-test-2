<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Caller</th>
      <th>Company number</th>
      <th>When</th>
      <th>Duration</th>
      <th>Status</th>
      <th>Voicemail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.uuid %></td>
        <td><%= call.caller_name || call.caller_id %></td>
        <td><%= call.company_number_id %></td>
        <td><%= time_ago_in_words(call.start_time) %> ago</td>
        <td><%= call.duration %></td>
        <td><%= call.status %></td>
        <td><%= format_voicemail(call.voicemail) %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
