<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>From</th>
      <th>To</th>
      <th>Answered by</th>
      <th>When</th>
      <th>Duration</th>
      <th>Status</th>
      <th>Voicemail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= truncate(call.uuid, length: 20, delimiter: '-') %></td>
        <td><%= call.caller_name || call.caller_id %></td>
        <td><%= truncate(call.company_number.sip_endpoint) %></td>
        <td><%= format_user_number(call.user_number) %></td>
        <td><%= call.start_time || '-' %></td>
        <td><%= format_duration(call.duration) %></td>
        <td><%= call.status %></td>
        <td><%= format_voicemail(call.voicemail) %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
